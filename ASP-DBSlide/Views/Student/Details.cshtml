@model ASP_DBSlide.Models.Student.StudentDetailsViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>@Model.Last_Name, @Model.First_Name</h1>

<div>
    <h4>@Model.Login</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Student_Id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Student_Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Birth_Date)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Birth_Date)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Section_Id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Section_Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Year_Result)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Year_Result)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Course_Id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Course_Id)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Modifier", "Edit", new { id = Model.Student_Id }, new {@class = "btn btn-primary"})
